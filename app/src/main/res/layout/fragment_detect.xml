<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detect_robot_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:text=""/>
                <TextView
                    android:id="@+id/robot_id_tv"/>
                <TextView
                    android:text=""/>
                <TextView
                    android:id="@+id/robot_name_tv"/>
                <TextView
                    android:text=""/>
                <TextView
                    android:id="@+id/robot_distance_tv"/>
                <TextView
                    android:text=""/>
                <TextView
                    android:id="@+id/robot_electric_tv"/>
            </TableRow>

        </TableLayout>

        <ListView
            android:id="@+id/detect_history_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>


</LinearLayout>